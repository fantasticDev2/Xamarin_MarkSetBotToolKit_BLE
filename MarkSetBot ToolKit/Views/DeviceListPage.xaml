<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MarkSetBot_ToolKit.Views.DeviceListPage"
    xmlns:vm="clr-namespace:MarkSetBot_ToolKit.ViewModels"
    Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:DeviceListViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0">
            <Button WidthRequest="100" BackgroundColor="#82C91E" Text="Search"/>
        </StackLayout>        
        <StackLayout Grid.Row="1" BindableLayout.ItemsSource="{Binding DeviceNames}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}"/>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>
    </Grid>
</ContentPage>
